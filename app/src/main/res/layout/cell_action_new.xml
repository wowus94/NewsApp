<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="335dp"
    android:layout_height="212dp">

    <ImageView
        android:id="@+id/image_restaurant_action"
        android:layout_width="335dp"
        android:layout_height="135dp"
        android:background="@drawable/shape_rounded_containers_image_view"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_restaurant_action"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_light"
        android:text="Пешков-Стрит"
        android:textColor="#21201F"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/image_restaurant_action" />

    <TextView
        android:id="@+id/date_action"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_light"
        android:text="до 31 сентября"
        android:textColor="#21201F"
        android:textSize="12sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/image_restaurant_action" />

    <TextView
        android:id="@+id/title_action"
        android:layout_width="178dp"
        android:layout_height="22dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-light"
        android:text="Хачапури в подарок"
        android:textColor="#21201F"
        android:textSize="18sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/title_restaurant_action" />

    <TextView
        android:id="@+id/text_action"
        android:layout_width="335dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_light"
        android:text="При покупке от 1999 рублей."
        android:textColor="#21201F"
        android:textSize="12sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/title_action" />

</androidx.constraintlayout.widget.ConstraintLayout>